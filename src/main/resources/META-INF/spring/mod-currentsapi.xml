<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="newsQueryInitializer" class="org.jahia.modules.currentsapi.initializers.QueryInitializer">
        <property name="key" value="newsQueryInitializer" />
    </bean>
    <bean class="org.jahia.modules.currentsapi.filters.CurrentsApiService">
        <property name="applyOnNodeTypes" value="capint:newsQuery"/>
        <property name="priority" value="50"/>
        <property name="currentsApiKey" value="${jahia.modules.publicnewsapi.attr.currentsApi.key:}"/>
    </bean>

    <bean class="org.jahia.modules.currentsapi.filters.News">

        <constructor-arg index="0" value="id"/>
        <constructor-arg index="1" value="title"/>
        <constructor-arg index="2" value="description"/>
        <constructor-arg index="3" value="url"/>
        <constructor-arg index="4" value="author"/>
        <constructor-arg index="5" value="image"/>
        <constructor-arg index="6" value="published"/>
    </bean>
</beans>
